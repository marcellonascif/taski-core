generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String?
  plan           String?
  scheduledDate  DateTime
  dueDate        DateTime?
  priority       Int
  duration       Int
  category       String
  mentalEnergy   Int
  physicalEnergy Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
